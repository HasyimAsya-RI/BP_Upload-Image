<?xml version = "1.0" encoding = "utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android           = "http://schemas.android.com/apk/res/android"
    xmlns:app               = "http://schemas.android.com/apk/res-auto"
    android:layout_width    = "match_parent"
    android:layout_height   = "wrap_content"
    android:layout_margin   = "10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width        = "match_parent"
        android:layout_height       = "wrap_content"
        android:layout_margin       = "5dp">

        <ImageView
            android:id                  = "@+id/imageMakanan"
            android:layout_width        = "70dp"
            android:layout_height       = "70dp"
            android:src                 = "@drawable/logo_pizza"
            app:layout_constraintTop_toTopOf        = "parent"
            app:layout_constraintStart_toStartOf    = "parent" />

        <TextView
            android:id                  = "@+id/textIdMakanan"
            android:layout_width        = "0dp"
            android:layout_height       = "wrap_content"
            android:gravity             = "center"
            android:layout_marginStart  = "24dp"
            android:text                = "ID Makanan"
            android:textColor           = "@color/black"
            app:layout_constraintTop_toTopOf        = "parent"
            app:layout_constraintStart_toEndOf      = "@+id/imageMakanan" />
        <TextView
            android:id                  = "@+id/textNamaMakanan"
            android:layout_width        = "0dp"
            android:layout_height       = "wrap_content"
            android:gravity             = "center"
            android:layout_marginTop    = "5dp"
            android:layout_marginStart  = "24dp"
            android:text                = "Nama Makanan"
            android:textSize            = "14dp"
            android:textColor           = "@color/black"
            app:layout_constraintStart_toEndOf      = "@+id/imageMakanan"
            app:layout_constraintTop_toBottomOf     = "@+id/textIdMakanan" />
        <TextView
            android:id                  = "@+id/textHargaMakanan"
            android:layout_width        = "0dp"
            android:layout_height       = "wrap_content"
            android:gravity             = "center"
            android:layout_marginTop    = "5dp"
            android:layout_marginStart  = "24dp"
            android:text                = "Nama Makanan"
            android:textSize            = "14dp"
            android:textColor           = "@color/black"
            app:layout_constraintTop_toBottomOf     = "@+id/textNamaMakanan"
            app:layout_constraintStart_toEndOf      = "@+id/imageMakanan" />

        <Button
            android:id                  = "@+id/buttonEditMakanan"
            android:layout_width        = "24dp"
            android:layout_height       = "35dp"
            android:layout_marginTop    = "16dp"
            android:layout_marginEnd    = "10dp"
            android:textSize            = "12dp"
            android:textStyle           = "bold"
            android:textColor           = "#D02C1A"
            android:drawableLeft        = "@drawable/ic_edit_red"
            android:padding             = "0dp"
            app:layout_constraintTop_toTopOf        = "parent"
            app:layout_constraintEnd_toStartOf      = "@+id/buttonHapusMakanan" />
        <Button
            android:id                  = "@+id/buttonHapusMakanan"
            android:layout_width        = "24dp"
            android:layout_height       = "35dp"
            android:layout_marginTop    = "16dp"
            android:layout_marginEnd    = "10dp"
            android:textSize            = "12dp"
            android:textStyle           = "bold"
            android:textColor           = "#D02C1A"
            android:drawableLeft        = "@drawable/ic_delete_red"
            android:padding             = "0dp"
            app:layout_constraintTop_toTopOf        = "parent"
            app:layout_constraintEnd_toEndOf        = "parent"
            app:layout_constraintHorizontal_bias    = "0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>